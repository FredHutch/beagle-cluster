{
  "name": "beagle-node",
  "description": "Role for beagle cluster nodes",
  "json_class": "Chef::Role",
  "default_attributes": {

  },
  "override_attributes": {
    "beagle": {
      "cluster_name": "beagle",
      "controller": "beagle-dev-ctld"
    },
    "slurm-wlm": {
      "services": {
        "slurmctld": "slurmctld",
        "slurmd": "slurmd"
      },
      "repository": {
        "uri": "http://octopus.fhcrc.org/aptly/public"
      }
    }
  },
  "chef_type": "role",
  "run_list": [
    "role[cit-base]",
    "role[scicomp-base]",
    "recipe[beagle-cluster::default]",
    "recipe[beagle-cluster::slurm_core]",
    "recipe[beagle-cluster::slurm_daemon]"
  ],
  "env_run_lists": {

  }
}
